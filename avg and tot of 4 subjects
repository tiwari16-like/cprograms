#include<stdio.h>
 int main()

{
    int h,e,m,s,t;
    float a ;
    printf("enter marks of hindi :");
    scanf("%d",&h);

    printf("enter marks of english :");
    scanf("%d",&e);

    printf("enter marks of maths :");
    scanf("%d",&m);

    printf("enter marks of science :");
    scanf("%d",&s);
    
    t=h+e+m+s;
    a=t/4.0;
    
    printf("total marks = %d\n",t);
    printf("average marks= %f",a); 
}
